<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.r3chn3n.Rechenpate2App.MainActivity">

    <!-- ImageView für Hintergrundbilder, falls noch benötigt -->
    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/setted_game_board" />

    <!-- PaintView für Zeichnungen -->
    <de.r3chn3n.Rechenpate2App.PaintView
        android:id="@+id/paint_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="truePaintView" />

    <!-- FloatingActionButton zum Löschen von Kreisen -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDeleteCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_delete_outline_circle_24px"
        android:contentDescription="@string/delete_circle"
        android:visibility="visible" />

    <!-- Optionaler Copyright-Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/dimen_9sp"
        android:textColor="@color/colorGrey"
        android:text="@string/_169_molnos_totz_2020" />

</RelativeLayout>
